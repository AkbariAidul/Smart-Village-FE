    <script>
        let currentSlide = 0;
        const slidesContainer = document.getElementById('carouselSlides');
        const indicators = document.querySelectorAll('.indicator');
        const totalSlides = 3;
        const totalSlidesWithDuplicate = 4; // 3 slides + 1 duplicate
        let isTransitioning = false;

        function updateSlide(smooth = true) {
            if (smooth) {
                slidesContainer.style.transition = 'transform 0.7s ease-in-out';
            } else {
                slidesContainer.style.transition = 'none';
            }
            
            slidesContainer.style.transform = `translateX(-${currentSlide * 100}%)`;
            
            // Update indicators
            const activeIndex = currentSlide % totalSlides;
            indicators.forEach((dot, index) => {
                if(index === activeIndex) {
                    dot.classList.remove('bg-white/50');
                    dot.classList.add('bg-white', 'scale-125');
                } else {
                    dot.classList.add('bg-white/50');
                    dot.classList.remove('bg-white', 'scale-125');
                }
            });

            // Check if we reached the duplicate slide and reset
            if (currentSlide === totalSlidesWithDuplicate) {
                setTimeout(() => {
                    isTransitioning = true;
                    slidesContainer.style.transition = 'none';
                    currentSlide = 0;
                    slidesContainer.style.transform = `translateX(0)`;
                    isTransitioning = false;
                }, 700); // Wait for transition to complete
            }
        }

        function nextSlide() {
            currentSlide++;
            updateSlide(true);
        }

        function prevSlide() {
            currentSlide--;
            if (currentSlide < 0) {
                currentSlide = totalSlides - 1;
            }
            updateSlide(true);
        }

        function goToSlide(index) {
            currentSlide = index;
            updateSlide(true);
        }

        // Auto slide every 3 seconds
        setInterval(nextSlide, 3000);
    </script>

